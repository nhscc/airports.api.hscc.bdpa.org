{
    "compilerOptions": {
        "target": "es2020",
        "moduleResolution": "node",
        "allowJs": true,
        "baseUrl": "../",
        "paths": {
            // ! If changed, also update these aliases in package.json & .eslintrc.js
            "universe/*": [
                "src/*"
            ],
            "multiverse/*": [
                "lib/*"
            ],
            "types/*": [
                "types/*"
            ],
            "lib": [ "es2020" ]
        },
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    }
}
